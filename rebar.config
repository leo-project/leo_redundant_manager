{require_otp_vsn, "R14B04|R15B01"}.

{deps, [
    {leo_commons, ".*", {git, "https://github.com/leo-project/leo_commons.git", "0.10.3"}},
    {leo_mq,      ".*", {git, "https://github.com/leo-project/leo_mq.git",      "0.10.1"}},
    {meck,        ".*", {git, "https://github.com/eproxus/meck.git",            {branch, "master"}}}
]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warn_unused_import,
            warnings_as_errors,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
