{require_otp_vsn, "18|19|20"}.

{deps, [
        {leo_mq,  ".*", {git, "https://github.com/leo-project/leo_mq.git",  {tag, "1.5.18"}}},
        {leo_rpc, ".*", {git, "https://github.com/leo-project/leo_rpc.git", {tag, "0.10.17"}}},
        {meck,    ".*", {git, "https://github.com/eproxus/meck.git",        {tag, "0.8.6"}}}
       ]}.

{erl_opts, [{d, 'NOTEST'},
            warn_obsolete_guard,
            warn_unused_import,
            warn_shadow_vars,
            warn_export_vars,
            warn_export_all
           ]}.
{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.
{clean_files, []}.
